<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <div>
        <h3 class="m-5">Forgot your password?</h3>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email,  required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="actions d-flex justify-content-center mb-4">
            <%= f.submit "Send me reset password instructions", class: "btn btn-primary mt-4" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

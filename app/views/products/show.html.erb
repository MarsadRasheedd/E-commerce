<div class="container">
  <div class="row">
    <div class="col-8">
      <p>
        <strong>Title:</strong>
        <%= @product.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p>
        <strong>Serial no:</strong>
        <%= @product.serial_no %>
      </p>

      <br>

      <% (0...@product.images.count).each do |image| %>
        <div style="height=200px; width=auto">
            <%= image_tag(@product.images[image], style: 'width:500px; height: auto')  %>
        </div>
      <% end %>

      <div class="d-flex  mt-3">
          <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %>
          <%= link_to 'Back', products_path, class: "ml-2 btn btn-primary" %>
      </div>

    </div>

    <div class="col-4">
      <div>
        <h2>Add Comment</h2>
        <%= render 'comments/form' %>
      </div>

      <h3>Comments by users</h3>

      <div id="products-comments-con">
        <% @product.comments.each do |comment| %>
          <div class="card text-center m-2">
              <h5>
                <%= comment.comment %>
              </h5>
          </div>
        <% end %>
      </div>
      <br>
    </div>
  </div>
</div>
<br><br>

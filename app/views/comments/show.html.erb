<div class="d-flex justify-content-center mt-5">
  <h4 class="m-2">Comment:</h4>
  <h2><strong><%= @comment.comment %></strong></h2>
</div>

<div class="d-flex justify-content-center mt-5">
  <%= link_to 'Back', product_path(Product.find(params[:product_id])), class: "btn btn-primary m-2" %>
  <%= link_to 'Edit', edit_product_comment_path(:comment_id => @comment.id), class: "btn btn-success m-2" %>
  <%= link_to 'Delete', product_comment_path(:comment_id => @comment.id), method: :delete, class: "btn btn-danger m-2" %>
</div>


